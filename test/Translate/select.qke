// CHECK:   %[[VAL_0:.*]] = select i1 %{{.*}}, %Qubit* %{{.*}}, %Qubit* %{{.*}}
// CHECK:   tail call void @__quantum__qis__h(%Qubit* %[[VAL_0]])
