# This script allows us to allocate a single GPU 
# to one of the MPI ranks.
numGPUS=$(nvidia-smi --list-gpus | wc -l)
echo $numGPUS
CUDA_VISIBLE_DEVICES=$(($OMPI_COMM_WORLD_RANK % $numGPUS)) @Python_EXECUTABLE@ $1