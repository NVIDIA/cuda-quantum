checkServerConnection() {
  PYTHONPATH=@CMAKE_BINARY_DIR@/python @Python_EXECUTABLE@ - << EOF
import socket
try:
    s = socket.socket(socket.AF_INET, socket.SOCK_STREAM)
    s.connect(("localhost", 62440))
    s.close()
except Exception:
    exit(1)
EOF
}
# Launch the fake server
PYTHONPATH=@CMAKE_BINARY_DIR@/python @Python_EXECUTABLE@ @CMAKE_SOURCE_DIR@/utils/start_mock_qpu.py quantinuum &
# we'll need the process id to kill it
pid=$(echo "$!")
n=0
while ! checkServerConnection; do
  sleep 1
  n=$((n+1))
  if [ "$n" -eq "20" ]; then
    kill -INT $pid
    exit 99
  fi
done
# Create the configuration file which needs to exist before entering main
config=FakeCppQuantinuum.config
cp -r @CMAKE_CURRENT_SOURCE_DIR@/$config .

# Run the tests (gtest-based, not using nvq++)
./test_quantinuum
# Did they fail? 
testsPassed=$?
# Clean up the config file
rm -f $config
# kill the server
kill -INT $pid
# return success / failure
exit $testsPassed
