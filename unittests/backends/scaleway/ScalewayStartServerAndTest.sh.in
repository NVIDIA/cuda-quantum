@Python_EXECUTABLE@ -c "import qio" 2> /dev/null
if [ $? -ne 0 ]; then
    echo "qio is not installed. It is required for testing Scaleway integration. Please install it using pip install qio. Skipping Scaleway tests."
    exit 77
fi


# Check if mock server is up
checkServerConnection() {
  PYTHONPATH=@CMAKE_BINARY_DIR@/python @Python_EXECUTABLE@ - << EOF
import socket
try:
    s = socket.socket(socket.AF_INET, socket.SOCK_STREAM)
    s.connect(("localhost", 62450))
    s.close()
except Exception:
    exit(1)
EOF
}

# Uncomment this and connect to mock_qpu backend server within the container (mock_qpu/scaleway) under main/utils
# Launch the fake server
PYTHONPATH=@CMAKE_BINARY_DIR@/python @Python_EXECUTABLE@ @CMAKE_SOURCE_DIR@/utils/start_mock_qpu.py scaleway &
# we'll need the process id to kill it
pid=$(echo "$!")
n=0

while ! checkServerConnection; do
  sleep 1
  n=$((n+1))
  if [ "$n" -eq "20" ]; then
    kill -INT $pid
    exit 99
  fi
done

# Run the tests
./test_scaleway
# Did they fail?
testsPassed=$?
# kill the server
kill -INT $pid
# return success / failure
exit $testsPassed
